<%- include('partials/header') %>

<div class="jumbotron text-center">
    <div class="container">
        <i class="fa fa-key fa-6x"></i>
        <h1 class="display-3">You've discovered my secret</h1>
        <ul>
            <% if (secrets && secrets.length > 0) { %>
              <% secrets.forEach(function(user) { %>
                <li><%= user.secret %></li>
              <% }) %>
            <% } else { %>
              <p><li>No secrets available!</li></p>
            <% } %>
        </ul>
        <hr>
        <a href="/logout" class="btn btn-light btn-lg" role="button">Logout</a>
        <a href="/submit" class="btn btn-dark btn-lg" role="button">Submit a Secret</a>
    </div>
</div>

<%- include('partials/footer') %>